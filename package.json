{
  "name": "@rm-hull/chakra-error-fallback",
  "version": "0.0.5",
  "description": "A React component for standardized error fallback",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "yarn build && changeset publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rm-hull/chakra-error-fallback.git"
  },
  "author": "Richard Hull",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@chakra-ui/react": ">=3.28.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "dependencies": {
    "next-themes": "^0.4.6",
    "react-icons": "^5.5.0",
    "shiki": "^3.15.0",
    "source-map-js": "^1.2.1"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.29.0",
    "@chakra-ui/react": "^3.29.0",
    "@changesets/cli": "^2.29.7",
    "@emotion/react": "^11.14.0",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-themes": "^10.0.8",
    "@storybook/builder-vite": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.0.8",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "storybook": "^10.0.8",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.13",
    "vitest-axe": "^0.1.0"
  },
  "packageManager": "yarn@4.10.3"
}
